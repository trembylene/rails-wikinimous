<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="post">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= article.content %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
